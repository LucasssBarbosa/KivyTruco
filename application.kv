<Time@TextInput>:
    padding_x: (self.width - self._get_text_width(self.text, self.tab_width, self._label_cached)) / 2
    padding_y: (self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0)
    multiline: False
    background_color: 1, 1, 1, .5
    foreground_color: 0,0,0, 1
    cursor_color: 1, 1, 1, 1
    font_size: 30

<Titulos@Label>:
    size_hint_x: 0.5
    color: 1, 1, 1, 1
    font_size:30
    canvas.before:
        Color:
            rgba: 1, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Space@Widget>:
    size_hint_x: 0.5

<Pontos@Label>:
    color: 1, 1, 1, 1
    font_size:30
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Ganhou@Button>:
    text: 'Ganhou'
    font_size:30


<TrucoApp>:
    orientation: 'vertical'
    Label:
        text: '[b]Truco Espanhol[/b]'
        markup: True
        size_hint: 1, None
        height: 50
    GridLayout:
        cols: 3
        rows: 4
        spacing: 10
        # size_hint_y: None
        # height: 250
        # row_force_default: True
        # row_default_height: 50
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Space:
        Time:
            text: 'Time 1'
        Time:
            text: 'Time 2'
        Titulos:
            text: 'bois'
        Pontos:
            id: bois1
            text: '0'
        Pontos:
            id: bois2
            text: '0'
        Titulos:
            text: 'Tentos'
        Pontos:
            id: tentos1
            text: '0'
        Pontos:
            id: tentos2
            text: '0'
        BoxLayout:
            Button:
                name: 'time1'
                text: '-'
                on_press: root.Menos(self.name)
            Button:
                name: 'time2'
                text: '-'
                on_press: root.Menos(self.name)
        Ganhou:
            name: 'time1'
            text: 'Ganhou1'
            on_press: root.ganhou(self.name)
        Ganhou:
            name: 'time2'
            text: 'Ganhou2'
            on_press: root.ganhou(self.name)
            
    BoxLayout:
        padding:10
        canvas.before:
            Color:
                rgba: 1,0,0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            spacing: 10
            canvas.before:
                Color: 
                    rgba:0,1,0,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                id:tipo
                text: 'Truco'
                font_size:50
                canvas.before:
                    Color:
                        rgba: 0,0,1,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                id: pontos
                text: '1'
                font_size:50
        
    BoxLayout:
        padding: 10
        BoxLayout:
            Button:
                id: btruco
                text: 'Truco'
                on_press: root.Truco()
            Button:
                id: benvido
                text: 'Envido'
                on_press: root.Envido()
            Button:
                id: bflor
                text: 'Flor'
                on_press: root.Flor()
