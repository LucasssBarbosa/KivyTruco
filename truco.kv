#:kivy 2.0.0

<Nometime@TextInput>:
    size_hint: 0.9, None
    multiline: False
    font_size: 30
    padding_x: (self.width - self._get_text_width(self.text, self.tab_width, self._label_cached)) / 2
    padding_y: (self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0)
    background_color: 0, 0, 1, 1
    foreground_color: 1, 1, 1, 1
    height: 45
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1  # Cor da borda preta
        Line:
            rectangle: (self.x + 1, self.y + 1, self.width - 2, self.height - 2)
            width: 1  # Largura da borda

<Titulos@Label>:
    size_hint: 0.1, None
    size: 100, 50
    font_size: 20
    color: 0, 0, 0, 1

    canvas.before:
        Color:
            rgba: 0, 0, 1, 1  # Cor do fundo azul
        Rectangle:
            pos: self.pos
            size: self.size

        Color:
            rgba: 0, 0, 0, 1  # Cor da borda preta
        Line:
            width: 1
            rectangle: (self.x + 1, self.y + 1, self.width - 2, self.height - 2)




<Pontos@Label>:
    size_hint: 0.1, None
    size: 100, 50
    font_size: 20
    color: 0, 0, 0, 1

    canvas.before:
        Color:
            rgba: 1, 0, 0, 1  # Cor do fundo vermelho
        Rectangle:
            pos: self.pos
            size: self.size

        Color:
            rgba: 0, 0, 0, 1  # Cor da borda preta
        Line:
            width: 1
            rectangle: (self.x + 1, self.y + 1, self.width - 2, self.height - 2)

<Ganhou@Button>:
    size_hint: 0.40, None
    size: 100, 50
    font_size: 20
    color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: 0, 1, 0, 1  # Cor do fundo verde
        Rectangle:
            pos: self.pos
            size: self.size

        Color:
            rgba: 0, 0, 0, 1  # Cor da borda preta
        Line:
            width: 1
            rectangle: (self.x + 1, self.y + 1, self.width - 2, self.height - 2)

<Fugiu@Button>:
    size_hint: 0.40, None
    size: 100, 50
    font_size: 20
    color: 0, 0, 0, 1
    canvas.before:
        # Color:
        #     rgba: 1, 0, 0, 1  # Cor do fundo vermelho
        # Rectangle:
        #     pos: self.pos
        #     size: self.size

        Color:
            rgba: 0, 0, 0, 1  # Cor da borda preta
        Line:
            width: 1
            rectangle: (self.x + 1, self.y + 1, self.width - 2, self.height - 2)



BoxLayout:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Fundo branco
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: '[b]TRUCO ESPANHOL[/b]'
        markup: True
        font_size: 35
        size_hint: 1, None
        height: 50
        color: 0,0,0, 1
        canvas.before:
            Color:
                rgba: 1, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
    GridLayout:
        cols: 3
        rows: 3
        Label:
            size_hint: 0.2, None
            size: 90, 90
        Nometime:
            text: 'time 1'
        Nometime:
            text: 'time 2'
        Titulos:
            text: 'TENTOS'
        Pontos:
            text: '0'
        Pontos:
            text: '1'
        Titulos:
            text: 'BOIS'
        Pontos:
            text: '3'
        Pontos:
            text: '4'

    GridLayout:
        cols: 3
        rows: 2
        spacing: 10
        Label:
            size_hint: 0.1, None
            size: 90, 45
            color: 1, 1, 1, 1
        Ganhou:
            text: 'GANHOU'
        Ganhou:
            text: 'GANHOU'
        Label:
            size_hint: 0.1, None
            size: 90, 45
            color: 1, 1, 1, 1
        Fugiu:
            text: 'FUGIU'
        Fugiu:
            text: 'FUGIU'
