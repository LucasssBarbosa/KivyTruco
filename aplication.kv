<Time@TextInput>:
    padding_x: (self.width - self._get_text_width(self.text, self.tab_width, self._label_cached)) / 2
    padding_y: (self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0)
    multiline: False
    background_color: 1, 1, 1, .5
    foreground_color: 0,0,0, 1
    cursor_color: 1, 1, 1, 1

<Titulos@Label>:
    size_hint_x: 0.3
    color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: 1, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Pontos@Label>:
    color: 1, 1, 1, 1
    canvas.after:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Ganhou@Button>:
    text: 'Ganhou'


<TrucoApp>:
    orientation: 'vertical'
    Label:
        text: '[b]Truco Espanhol[/b]'
        markup: True
        size_hint: 1, None
        height: 50
    GridLayout:
        cols: 3
        rows: 4
        spacing: 10
        row_force_default: True
        row_default_height: 50
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Titulos:
        Time:
            text: 'Time 1'
        Time:
            text: 'Time 2'
        Titulos:
            text: 'Tentos'
        Pontos:
            id: tentos1
            text: 'tentos1'
        Pontos:
            id: tentos2
            text: 'tentos2'
        Titulos:
            text: 'bois'
        Pontos:
            id: bois1
            text: 'bois1'
        Pontos:
            id: bois2
            text: 'bois2'
        Titulos:
        Ganhou:
            id: ganhou1
            text: 'Ganhou1'
            on_press: root.ganhou(self.text)
        Ganhou:
            id: ganhou2
            text: 'Ganhou2'
            on_press: root.ganhou(self.text)
            
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0,0,0, 1
            Rectangle:
                pos: self.pos
                size: self.size